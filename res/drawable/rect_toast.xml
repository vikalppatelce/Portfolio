<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <stroke
                android:width="@dimen/border_Low"
                android:color="@color/borderLow" />
            <corners 
                android:radius="4dp"/>

            <gradient
                android:endColor="@color/gradientEnd"
                android:gradientRadius="@integer/gradient_radius"
                android:startColor="@color/gradientStart"
                android:angle="270">
            </gradient>
        </shape>
    </item>
    <item>
        <inset
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetBottom="@dimen/negborder"
            android:insetLeft="0dp"
            android:insetRight="@dimen/negborder"
            android:insetTop="0dp" >
            <shape>
                <stroke
                    android:width="@dimen/border_High"
                    android:color="@color/borderHigh" />
                <corners 
                android:radius="4dp"/>
                <gradient
                android:endColor="@color/gradientEnd"
                android:gradientRadius="@integer/gradient_radius"
                android:startColor="@color/gradientStart"
                android:angle="270"
                />
            </shape>
        </inset>
    </item>
</layer-list>