<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
    </style>
    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>
    
    <style name="ButtonBar" parent="@android:style/Holo.Light.ButtonBar.AlertDialog" tools:ignore="NewApi"></style>

    <style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless" tools:ignore="NewApi">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="PfButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
    </style>
    
    <style name="PfEditTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_editbox</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
</resources>
