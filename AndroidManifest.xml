<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.vicshady.portfolio"
    android:versionCode="10"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <application
        android:name="demo.vicshady.portfolio.app.Portfolio"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        
        <provider
            android:name="demo.vicshady.portfolio.sql.PortfolioDB"
            android:authorities="demo.vicshady.portfolio.sql.PortfolioDB" tools:ignore="ExportedContentProvider"/>

        <service android:name="demo.vicshady.portfolio.service.UploadData" />
        
        <activity
            android:name="demo.vicshady.portfolio.ui.WalkThroughActivity"
            android:label="@string/app_name" >
            
        </activity>
        
        <activity
            android:name="demo.vicshady.portfolio.ui.SendPhotoActivity"
            android:windowSoftInputMode="stateHidden" />
        
        <activity android:name="demo.vicshady.portfolio.ui.PrefsActivity" />
        <activity android:name="demo.vicshady.portfolio.ui.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="demo.vicshady.portfolio.ui.AboutActivity" />

    </application>
</manifest>